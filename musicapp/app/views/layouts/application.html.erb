<!DOCTYPE html>
<html>
  <head>
    <title>Musicapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= button_to "Sign Out", session_url(session) , method: :delete %>
      <% else %>
        <%= button_to "Log In", new_session_url, method: :post %>
        <%= button_to "Sign Up", new_user_url, method: :post %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
