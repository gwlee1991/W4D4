<h1><%= @band.name %></h1>

<h2>Albums</h2>

<% @albums.each do |album| %>
  <%= link_to "#{album.title}", album_url(album), method: :get %><br/>
<% end %>

<br/>
<%= link_to "Add album for this band", new_band_album_url(@band), method: :get %>
<br/>

<%= button_to "Edit Band Info", edit_band_url, method: :get %>
<%= button_to "Delete Band", band_url(@band), method: :delete %>
<br/>
<%= button_to "Back to home", bands_url, method: :get %>
