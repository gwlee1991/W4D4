<h1><%= @album.title %></h1>

<h2>Tracks</h2>

<% @tracks.each do |track| %>
  <%= link_to "#{track.song}", track_url(track), method: :get %><br/>
<% end %>

<br/>
<%= link_to "Add track for this album", new_album_track_url(@album), method: :get %>
<br/>

<%= button_to "Edit Album Info", edit_album_url, method: :get %>
<%= button_to "Delete Album", album_url(@album), method: :delete %>
<br/>
<%= button_to "Back to home", bands_url, method: :get %>
